{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2020",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": ["src/*.spec.ts"]
}